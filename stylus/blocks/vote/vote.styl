.vote
  position relative
  min-width 100vw
  min-height 100vh
  overflow hidden

  &__bg
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    width 100%
    height 100%
    z-index -1
    object-fit cover

  &__container
    display flex
    flex-direction column
    justify-content space-between
    align-items stretch
    height 100vh
    min-height 500px

  &__header
    padding 40px 0 0
    font-size: 60px;
    font-weight: 700;
    text-align center
    color #fff
    opacity 0.6

  &__middle
    text-align center

  &__star
    opacity 0.6

  &__foo
    padding-bottom 30px
    color white
    text-shadow: 0 -1px 0 rgba(0, 141, 40, 0.33);
    text-align right
    font-size: 21px;
    font-weight: 700;
    line-height: 30px;
    text-transform: uppercase;
    opacity 0.6

  &__social
    position relative
    top -5px
    display inline
    margin-left 20px

  &__close
    position absolute
    top 15px
    right 20px

    &:hover,
    &:focus,
    &:active
      opacity: 0.6
