.foo
  padding 30px 0 0
  color #261f11
  background white

  &__container
    display flex
    flex-direction column
    padding-bottom 15px

    @media (min-width $screen-sm)
      flex-direction row
      justify-content space-between

  &__logo
    color #17161d
    font-family Panton
    font-size 48px
    font-weight 800
    line-height 45px
    margin-bottom 20px


  &__bar
    display flex
    flex-direction column
    align-items flex-start

    @media (min-width $screen-sm)
      flex-direction row

  &__button
    margin-right 40px
    text-transform none
    border-width 1px
    margin-bottom 10px

  &__social
    margin-bottom 10px

  &__email
    font-family Fregat
    font-size 18px
    font-weight 400

  &__nav
    border-top 1px solid #261f11
