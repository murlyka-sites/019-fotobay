.main-run
  padding 140px 0 165px
  background-color #ffb200
  background-image radial-gradient(circle 294px at 44% 38%, rgba(247, 157, 0, 0.53) 0%, rgba(252, 234, 187, 0.53) 0%, rgba(248, 181, 0, 0.53) 100%)

  &__items
    fill #261d07
    margin-bottom 60px

    @supports(flex-wrap wrap)
      display flex
      align-items center
      justify-content center
      flex-wrap wrap

      @media (min-width 1012px)
        justify-content space-around


  &__item
    display inline-block
    width 50%
    padding 0 15px
    text-align center

    @media (min-width 1012px)
      width 25%

  &__icon
    // width 100%
    // height 100%
    // max-width 200px

    @media (min-width 1012px)
      width auto
      height auto

  &__button
    display block
    width 100%
