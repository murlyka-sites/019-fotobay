.main
  background #ffb200
  // background radial-gradient(circle 0px at 44% 38%, #fcb500 0%, #fdd060 0%, #fcb500 100%) #ffb200
  background-image radial-gradient(circle 871px at 44% 38%, rgba(247, 157, 0, 0.53) 0%, rgba(252, 234, 187, 0.53) 0%, rgba(248, 181, 0, 0.53) 100%)

  &__logo
    max-width 100%

  &__header
    position relative
    text-align center

    @media (min-width $screen-md)
      display flex
      align-items center
      justify-content center
      padding 30px 100px 43px



  &__social
    display inline-block
    padding 30px 0

    @media (min-width $screen-md)
      right 50px
      position absolute
      top 50%
      margin-top -10px
      padding 0

    @media (min-width $screen-lg)
      right 105px
  &__pr

    &-1
      text-align center

      @media (min-width $screen-sm)
        height 0
        text-align right

      img
        max-width 100%
        height auto


    &-2
      text-align center

  &__ribbon
    margin-top 8px
    background color-white

  &__ready
    padding-top 30px
