.main-cloud
  margin-top -11px
  background white

  @media (max-width ($screen-lg - 1px))
    br
      display none

  &__left
    padding-top 30px

  &__slogan
    margin-bottom 15px
    color #261d07
    font-family Panton
    font-size 21px
    font-weight 700
    line-height 30px

  b
    font-weight 800

  &__cloud
    width 506px
    max-width 100%
    height 261px
    color #261d07
    font-family Panton
    font-size 24px
    font-weight 700
    line-height 30px
    margin 0 auto

    @media (min-width 550px)
      background url(../images/cloud.png) center / 100% no-repeat
      padding 77px 52px 57px 75px
      margin 0 auto

    @media (min-width $screen-lg)
      margin -20px 0 -16px 60px


.main-cloud-2
  padding-bottom 54px
  background-color #ffb200
  background-image radial-gradient(circle 160px at 44% 38%, rgba(247, 157, 0, 0.53) 0%, rgba(252, 234, 187, 0.53) 0%, rgba(248, 181, 0, 0.53) 100%)

  &__cloud
    margin 20px 0
    color #261d07
    font-family Panton
    font-size 24px
    font-weight 700
    line-height 30px

    @media (max-width 549px)
      br
        display none




    @media (min-width 550px)
      position relative
      left -20px
      padding 77px 52px 57px 75px
      margin 20px auto -16px
      width 506px
      height 261px
      background url(../images/cloud.png) center / 100% no-repeat
