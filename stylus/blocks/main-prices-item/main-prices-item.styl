.main-prices-item
	display flex
	align-items center
	border-radius 15px
	margin 0 auto 30px
	box-shadow 1px 1px 2px rgba(119, 94, 28, 0.25)

	background-color #fbb400
	background-image radial-gradient(circle 146px at 44% 38%, rgba(247, 157, 0, 0.53) 0%, rgba(252, 234, 187, 0.53) 0%, rgba(248, 181, 0, 0.53) 100%)


	@media (min-width $screen-md)
		min-height 292px
		padding 0 30px
		border-radius 50px
		width 830px

	&__pr
		width 30%
		padding 10px
		text-align center

		.svg
			max-width 100%
			height auto

		@media (min-width $screen-md)
			width 270px
			padding 0

	&__desc
		width 70%
		padding 10px
		color #261d07
		font-family Panton
		text-align left

		@media (min-width $screen-md)
			padding 30px

	&__title
		font-size 20px
		font-weight 700
		line-height 36px

		@media (min-width $screen-sm)
			font-size 30px


	&__price
		font-size 40px
		font-weight 900
		line-height 1

		@media (min-width $screen-sm)
			font-size 100px

	&__rubl
		font-family "ALS Rubl"
		font-size 40px
		font-weight 400

		@media (min-width $screen-sm)
			font-size 100px
