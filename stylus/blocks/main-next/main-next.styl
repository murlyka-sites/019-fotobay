.main-next
  padding 87px 0
  text-align center
  color #261d07

  &__title
    margin-bottom 30px
    font-size 36px
    font-weight 700
    line-height 32px
    text-transform uppercase

  &__date,
  &__time
    display block
    font-size 30px
    font-weight 700
    line-height 32px
    text-transform uppercase

  &__date
    margin-bottom 15px
    font-weight 900
    color red

  &__time
    margin-bottom 23px
    font-weight 800

  &__slogan
    margin-bottom 15px
    font-size 24px
    font-weight 700
    line-height 32px

  &__start
    margin 32px 0 25px
    font-size 30px
    font-weight 700
    line-height 32px

  &__countdown
    margin-bottom 47px

  &__button
    display block
    width 100%
    margin-bottom 15px

  &__pr
    width 100%
    height auto
    margin-bottom 15px
