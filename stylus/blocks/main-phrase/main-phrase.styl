.main-phrase
  background: url(../images/bg-main-phrase.jpg) center bottom  no-repeat #ed9500;

  &__levels
    padding 35px 0 0

  &__level
    color #fbf8e9
    font-family Panton
    font-weight 700
    line-height 30px
    text-transform uppercase
    margin-bottom 15px

    &-1
      font-size 21px
      font-weight 800
      text-align left

    &-2
      font-size 24px
      font-weight 800
      text-align center

    &-3
      font-size 36px
      font-weight 800
      text-align right

  &__button
    display block
    width 331px
    margin 67px auto
